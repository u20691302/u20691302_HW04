@model IEnumerable<u20691302_HW04.Models.BigCats>

@{
    ViewBag.Title = "Big Cats";
}

<h2>Big Cats</h2>

<p>
    @Html.ActionLink("Create New", "CreateBigCats")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ScientificName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Habitat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Population)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ScientificName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Habitat)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Population)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>

    <td>
        @Html.ActionLink("Update", "EditBigCats", new { id = item.ID }) |
        @Html.ActionLink("Details", "DetailsBigCats", new { id = item.ID }) |
        @Html.ActionLink("Delete", "DeleteBigCats", new { id = item.ID })
    </td>
</tr>
}

</table>
