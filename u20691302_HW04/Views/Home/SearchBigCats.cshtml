@model u20691302_HW04.Models.BigCats

@{
    ViewBag.Title = "Search Big Cats";
}

<h1 class="card-title">WWF Endangered Animals Tracker</h1>
<h4 class="card-subtitle mb-2 text-muted">Taberer Applications</h4>
<div class="container" style="background-color: #292b2c; color: white; padding: 25px ">
    <!--Bootstrap Card-->
    <div class="card">
        <div class="card-body">
            <h2>Search Big Cats</h2>
            <hr />
            @using (Html.BeginForm("SearchForBigCats", "Home"))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="searchPhrase">Search Marine Animals by Endangered Status:</label>
                            <select class="form-control" id="searchPhrase" name="searchPhrase">
                                <option value="Least Concern / Near Threatened">Least Concern / Near Threatened</option>
                                <option value="Vulnerable">Vulnerable</option>
                                <option value="Endangered">Endangered</option>
                                <option value="Critically Endangered">Critically Endangered</option>
                                <option value="Extinct in The Wild">Extinct in The Wild</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Search" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to Big Cats", "BigCats")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
