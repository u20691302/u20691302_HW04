@model u20691302_HW04.Models.BigCats

@{
    ViewBag.Title = "Details";
}

<h1 class="card-title">WWF Endangered Animals Tracker</h1>
<h4 class="card-subtitle mb-2 text-muted">Taberer Applications</h4>
<div class="container" style="background-color: #292b2c; color: white; padding: 25px ">
    <h2>Big Cat Details</h2>
    <hr />
    <div class="row">
        <div class="col-sm-4">
            <!--Bootstrap Card-->
            <div class="card">
                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.ScientificName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ScientificName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Habitat)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Habitat)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Population)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Population)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-sm-8">

            <!--Bootstrap Card-->
            <div class="card">
                <div class="card-body">
                    <a href="@Url.Content(Model.ImgPath)"><img src="@Url.Content(Model.ImgPath)" class="img-responsive" width="750" height="550"></a>
                </div>
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Back to Big Cats", "BigCats")
    </p>
</div>